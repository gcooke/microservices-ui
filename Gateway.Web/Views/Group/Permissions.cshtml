@using Gateway.Web.Database
@using Gateway.Web.Models
@using Gateway.Web.Models.Controller
@using Gateway.Web.Models.Group
@using Gateway.Web.Models.Permission
@using Gateway.Web.Utils
@using Newtonsoft.Json
@using Version = Gateway.Web.Models.Controller.Version
@model PermissionsModel
@{
    Layout = "~/Views/Shared/_Layout.NoFooter.cshtml";
    ViewBag.Title = "Group";
    ViewBag.Current = "Permissions";
}
@{ Html.RenderPartial("_GroupNav", (PermissionsModel)@Model); }

<div id="page-content-wrapper">
    <div class="hero-unit">

        <h3>Permissions</h3>

        <div id="containerx bulk">

            <table style="width: 100%; white-space: nowrap" class="datatable">
                <thead>
                    <tr>
                        <td>System Name</td>
                        <td>Name</td>
                        <td>Action</td>
                    </tr>
                </thead>
                @foreach (PermissionModel item in Model.Items)
                {
                    <tr>
                        <td>@item.SystemName</td>
                        <td>@item.Name</td>
                        <td>
                            @Html.ActionLink("View", "Details", "Permission", new { id = item.Id }, new { @class = "hoverlink" })
                            &nbsp;
                            @Html.ActionLink("Remove", "RemovePermission", "Group", new { id = item.Id }, new { @class = "hoverlink" })
                        </td>
                    </tr>
                }
            </table>
            <br />

        </div>
        <br />

        @using (Html.BeginForm("InsertPermission", "Group", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <a class="btn btn-primary" data-toggle="collapse" href="#collapsePanel" aria-expanded="false" aria-controls="collapsePanel">
                Add New Permission
            </a>
            <div class="@(Html.ViewData.ModelState.IsValid ? "collapse" : "collapse show")" id="collapsePanel">
                <div class="info-block">
                    <div>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <!-- Hidden Id Field -->
                        @Html.TextBox("id", Model.Id, new { @class = "form-control", @style = "display:none" })

                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-2">
                                    <label class="control-label">Permission</label>
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownList("_permission", Model.AvailablePermissions, new { @class = "form-control" })
                                </div>
                            </div>
                            
                            <div class="col-md-offset-2 col-md-4">
                                <input type="submit" class="btn btn-primary" value="Add" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
