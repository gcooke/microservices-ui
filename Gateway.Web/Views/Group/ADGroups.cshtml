@using Gateway.Web.Database
@using Gateway.Web.Models
@using Gateway.Web.Models.Controller
@using Gateway.Web.Models.Group
@using Gateway.Web.Utils
@using Newtonsoft.Json
@using Version = Gateway.Web.Models.Controller.Version
@model ADGroupsModel
@{
    Layout = "~/Views/Shared/_Layout.NoFooter.cshtml";
    ViewBag.Title = "Group";
    ViewBag.Current = "ADGroups";
}
@{ Html.RenderPartial("_GroupNav", (ADGroupsModel)@Model); }

<div id="page-content-wrapper">
    <div class="hero-unit">

        <h3>Active Directory Groups</h3>

        <div id="containerx bulk">

            <table style="width: 100%; white-space: nowrap" class="datatable">
                <thead>
                    <tr>
                        <td>Name</td>
                        <td>Domain</td>
                        <td>Action</td>
                    </tr>
                </thead>
                @foreach (GroupActiveDirectory item in Model.Items)
            {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Domain</td>
                        <td>
                            @Html.ActionLink("Remove", "RemoveAD", "Group", new { id = item.Id }, new { @class = "hoverlink" })
                        </td>
                    </tr>
                }
            </table>
            <br />

        </div>
        <br />

        <h3>Add New</h3>
        @using (Html.BeginForm("InsertGroupADGroups", "Group", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-3">
                            
                            @*@Html.LabelFor(m => m.TimeToLiveSec, new {@class = "control-label"})*@
                        </div>
                        <div class="col-md-4">
                            
                        </div>
                        <div class="col-md-4">
                            @*@Html.HiddenFor(m => m.Name)*@
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            @*@Html.LabelFor(m => m.ScalingStrategy, new { @class = "control-label" })*@
                        </div>
                        <div class="col-md-4">
                            @*@Html.EnumDropDownListFor(model => model.ScalingStrategy, new { @class = "form-control" })*@
                        </div>
                    </div>
                </div>
                <div class="col-md-offset-3 col-md-4">
                    <input type="submit" class="btn btn-default" value="Save" />
                </div>
            </div>
        }
    </div>
</div>
