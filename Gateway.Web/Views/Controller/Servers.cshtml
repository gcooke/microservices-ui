@using Gateway.Web.Models.Controller

@model ControllerServersModel
@{
    Layout = "~/Views/Shared/_Layout.NoFooter.cshtml";
    ViewBag.Title = "Servers";
    ViewBag.Current = "Servers";
}

@{ Html.RenderPartial("_ControllerNav", @Model); }

<div id="page-content-wrapper">
    <div class="hero-unit">
        <h3 class="text-lowercase">@ViewBag.Title</h3>
        <br/>
        @using (Html.BeginForm("Servers", "Controller", FormMethod.Post, new {name = "form", @class = "form-horizontal", role = "form"}))
        {
            @Html.Partial("_ControllerServers", @Model);
        }
    </div>
</div>
