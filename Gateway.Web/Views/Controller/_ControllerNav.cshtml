<!-- Sidebar -->
<div id="sidebar-wrapper">
    <br />
    <div style="margin-left: 10px; height: 50px">
        <div style="float: left">
            <img class="sidebar-img" src="@Url.Content(MvcApplication.ControllerIcon)" style="height: 48px">
        </div>
        <div style="float: left; margin-top: 5px">
            <span class="sidebar-title">@Model.Name</span><br />
            <span class="sidebar-subtitle">@ViewBag.Title</span>
        </div>
    </div>

    <div class="sidebar-navheader">
        <strong>DETAILS</strong>
    </div>

    <ul class="sidebar-nav">
        <li>
            <a href="~/Controller/Dashboard/@Model.Name"
               class="@(ViewBag.Current == "Controller" ? "active" : "")">
                <span class="glyphicon glyphicon-list-alt"></span>&nbsp;&nbsp;Summary
            </a>
        </li>
        <li>
            <a href="~/Controller/Workers/@Model.Name"
               class="@(ViewBag.Current == "Workers" ? "active" : "")">
                <span class="glyphicon glyphicon-th"></span>&nbsp;&nbsp;Workers
            </a>
        </li>
        <li>
            <a href="~/Controller/Versions/@Model.Name"
               class="@(ViewBag.Current == "Versions" ? "active" : "")">
                <span class="glyphicon glyphicon-list-alt"></span>&nbsp;&nbsp;Versions
            </a>
        </li>
        <li>
            <a href="~/Controller/Queues/@Model.Name"
               class="@(ViewBag.Current == "Queues" ? "active" : "")">
                <span class="glyphicon glyphicon-random"></span>&nbsp;&nbsp;Queues
            </a>
        </li>
        <li>
            <a href="~/Controller/History/@Model.Name"
               class="@(ViewBag.Current == "History" ? "active" : "")">
                <span class="glyphicon glyphicon-search"></span>&nbsp;&nbsp;History
            </a>
        </li>
        <li>
            <a href="~/Controller/Configuration/@Model.Name"
               class="@(ViewBag.Current == "Configuration" ? "active" : "")">
                <span class="glyphicon glyphicon-cog"></span>&nbsp;&nbsp;Configuration
            </a>
        </li>
        <li>
            <a href="~/Controller/Documentation/@Model.Name"
               class="@(ViewBag.Current == "Documentation" ? "active" : "")">
                <span class="glyphicon glyphicon-file"></span>&nbsp;&nbsp;Documentation
            </a>
        </li>
        <li>
            &nbsp;
        </li>
    </ul>

    <div class="sidebar-navheader">
        <strong>NAVIGATION</strong>
    </div>

    <ul class="sidebar-nav">
        <li>
            <a href="~/Controllers/Dashboard">
                <span class="glyphicon glyphicon-circle-arrow-left"></span>&nbsp;&nbsp;All Controllers
            </a>
        </li>
    </ul>
</div>
<!-- /#sidebar-wrapper -->
