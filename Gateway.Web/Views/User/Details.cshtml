@using Gateway.Web.Database
@using Gateway.Web.Models
@using Gateway.Web.Models.Controller
@using Gateway.Web.Models.Group
@using Gateway.Web.Models.Permission
@using Gateway.Web.Models.Security
@using Gateway.Web.Models.User
@using Gateway.Web.Utils
@using Newtonsoft.Json
@using Version = Gateway.Web.Models.Controller.Version
@{
    Layout = "~/Views/Shared/_Layout.NoFooter.cshtml";
    ViewBag.Title = "User: " + @Model.Login;
    ViewBag.Current = "Details";
}
@{ Html.RenderPartial("_UserNav", (IUserModel)@Model); }

<div id="page-content-wrapper">
    <div class="hero-unit">
        <br />
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div id="containerx bulk">

            <table style="width: 50%; white-space: nowrap" class="datatable">
                <tr>
                    <td class="columnheader">Domain</td>
                    <td>@Model.Domain</td>
                </tr>
                <tr>
                    <td class="columnheader">Login</td>
                    <td>@Model.Login</td>
                </tr>
                <tr>
                    <td class="columnheader">Full Name</td>
                    <td>@Model.FullName</td>
                </tr>
            </table>

        </div>
        <br />
        @Html.ActionLink("Delete", "RemoveUser", "User", new { id = Model.Id }, new { @class = "btn btn-default btn-sm" })

    </div>
</div>
