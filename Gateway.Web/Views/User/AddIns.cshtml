@using Gateway.Web.Models.Group
@using Gateway.Web.Models.User
@model Gateway.Web.Models.User.AddInsModel
@{
    Layout = "~/Views/Shared/_Layout.NoFooter.cshtml";
    ViewBag.Title = "User: " + @Model.Login;
    ViewBag.Current = "AddIns";
}
@{ Html.RenderPartial("_UserNav", @Model); }

<div id="page-content-wrapper">

    <div class="hero-unit">
        <h3 class="text-lowercase">User Add-in Version</h3>
    </div>

    <div class="containerx bulk">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <table style="white-space: nowrap; width: 100%;" class="datatable">
            <thead>
                <tr>
                    <td></td>
                    <td>Name</td>
                    <td>Friendly Name</td>
                    <td>Version</td>
                </tr>
            </thead>
            @foreach (var item in Model.ExcelAddInVersions)
            {
                <tr>
                    <td>
                        @Html.ActionLink(" ", "RemoveAddInVersion", "User", new { userId = @Model.Id, addInVersionId = item.ExcelAddInVersionId }, new { @class = "text-center glyphicon glyphicon-trash" })
                    </td>
                    <td>@item.Name</td>
                    <td>@item.FriendlyName</td>
                    <td>@item.Version</td>
                </tr>
            }
        </table>
        <br />
    </div>

    <div class="hero-unit">
        <h3 class="text-lowercase">Add-in versions inherited from groups</h3>
    </div>

    <div class="containerx bulk">

        <table style="white-space: nowrap; width: 100%;" class="datatable">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>Friendly Name</td>
                    <td>Version</td>
                </tr>
            </thead>
            @foreach (var item in Model.GroupExcelAddInVersions)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.FriendlyName</td>
                    <td>@item.Version</td>
                </tr>
            }
        </table>
        <br />
    </div>
    @using (Html.BeginForm("AddIns", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="modal fade add-modal" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title" id="myModalLabel">Add Add-Ins</h4>
                    </div>

                    <div class="modal-body">
                        @Html.AntiForgeryToken()

                        <!-- Hidden Id Field -->
                        @Html.TextBox("_id", Model.Id, new { @class = "form-control", @style = "display:none" })

                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-2">
                                    <label class="control-label">Version</label>
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownList("_version", Model.AvailableAddInVersions, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div><div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-default">Add</button>
                </div>
            </div>
        </div>
    }
</div>
