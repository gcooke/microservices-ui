@using Gateway.Web.Models.Group
@using Gateway.Web.Models.User
@model UserModel
@{
    Layout = "~/Views/Shared/_Layout.NoFooter.cshtml";
    ViewBag.Title = "User: " + @Model.Login;
    ViewBag.Current = "Groups";
}
@{ Html.RenderPartial("_UserNav", (UserModel)@Model); }

<div id="page-content-wrapper">
    <div class="hero-unit">
        <br />
        <div id="containerx bulk">

            <table style="width: 100%; white-space: nowrap" class="datatable">
                <thead>
                    <tr>
                        <td>Description</td>
                        <td>Name</td>
                        <td>Action</td>
                    </tr>
                </thead>
                @foreach (GroupModel item in Model.UserGroups)
                {
                <tr>
                    <td style="display: none;">@item.Id</td>
                    <td>@item.Description</td>
                    <td>@item.Name</td>
                    <td>
                        @Html.ActionLink("Remove", "RemoveGroup", "User", new { userId = @Model.Id, groupId = item.Id }, new { @class = "hoverlink" })
                    </td>
                </tr>
                }
            </table>
            <br />

        </div>
        <br />

        @using (Html.BeginForm("Groups", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <a class="btn btn-default btn-sm" data-toggle="collapse" href="#collapsePanel" aria-expanded="false" aria-controls="collapsePanel">
                Add User to Group
            </a>
            <div class="@(Html.ViewData.ModelState.IsValid ? "collapse" : "collapse show")" id="collapsePanel">
                <div class="info-block">
                    <div>
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <!-- Hidden Id Field -->
                        @Html.TextBox("_id", Model.Id, new { @class = "form-control", @style = "display:none" })

                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-2">
                                    <label class="control-label">Group</label>
                                </div>
                                <div class="col-md-4">
                                    @Html.DropDownList("_system", @Model.Items, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-md-offset-2 col-md-4">
                                <input type="submit" class="btn btn-default btn-sm" value="Add" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>