@using Gateway.Web.Models.Security
@using Gateway.Web.Models.User
@{
    Layout = "~/Views/Shared/_Layout.NoFooter.cshtml";
    ViewBag.Title = "Security";
    ViewBag.Current = "Users";
}
@{ Html.RenderPartial("_SecurityNav", (UsersModel)@Model); }

<div id="page-content-wrapper">
    <div class="hero-unit">
        <br />
        <p>
            <strong>Please Note:</strong>
             users can have access without appearing in this list through Active Directory membership to groups. To view effective permissions for a user, please click on the report links in the left hand navigation panel.
        </p>

        <div id="containerx bulk">

            <table style="width: 100%; white-space: nowrap" class="datatable table">
                <thead>
                    <tr>
                        <td>Domain</td>
                        <td>Login</td>
                        <td>
                            Full Name
                            <a class="btn btn-default btn-xs glyphicon glyphicon-plus pull-right"
                               data-target=".add-modal"
                               data-toggle="modal"></a>
                        </td>
                    </tr>
                </thead>
                @foreach (UserModel user in Model.Items)
                {
                    <tr data-href="@(Url.Action("Details", "User", new { id = user.Id }))">
                        <td>@user.Domain</td>
                        <td>@user.Login</td>
                        <td>@user.FullName</td>
                    </tr>
                }
            </table>
            <br />
        </div>
        @using (Html.BeginForm("InsertUser", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="modal fade add-modal" tabindex="-1" role="dialog">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">

                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel">Add Redstone User</h4>
                        </div>

                        <div class="modal-body">

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-2">
                                        <label class="control-label">Domain</label>
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBox("_domain", "", new {@class = "form-control"})
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-2">
                                        <label class="control-label">Login</label>
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBox("_login", "", new {@class = "form-control"})
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-2">
                                        <label class="control-label">Full Name</label>
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBox("_fullName", "", new {@class = "form-control"})
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-default">Add</button>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
</div>
