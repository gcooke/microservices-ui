@model Gateway.Web.Models.Schedule.Output.ScheduleDeleteModel

@{
    Layout = "~/Views/Shared/_Layout.NoFooter.cshtml";
    ViewBag.Title = "Configuration";
    ViewBag.Current = "Schedule";
}
@{ Html.RenderPartial("_BatchConfigNav"); }

<div id="page-content-wrapper">
    <div class="hero-unit">

        <div class="row">
            <div class="col-sm-12">
                <h3 class="text-lowercase">Delete Items(s)?</h3>
            </div>
        </div>

        <div class="row m-t-15">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <span>Are you sure you want to delete the following item(s):</span>
                <br />
                <br />
                <ul>
                    @foreach (var item in Model.ItemsForDeletion)
                    {
                        <li>@item</li>
                    }
                </ul>
                <br />

                @if (Model.ScheduleId.HasValue)
                {
                    <a href="~/Schedule/@Model.ScheduleId/Delete" class="btn btn-default">Yes</a>
                }
                else if (Model.GroupId.HasValue)
                {
                    <a href="~/Schedule/Group/@Model.GroupId/Delete" class="btn btn-default">Yes</a>
                }
                else
                {
                    <a href="~/Schedule/Delete/Bulk?items=@string.Join(",", Model.ScheduledIdList)" class="btn btn-default">Yes</a>
                }

                <a href="~/Schedule/Update" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>
</div>

