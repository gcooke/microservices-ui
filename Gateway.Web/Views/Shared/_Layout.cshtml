<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Redstone</title>
    @Styles.Render("~/styles/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="icon" type="image/x-icon" href="@Url.Content(MvcApplication.FavIcon)" />
    <link rel="shortcut icon" type="image/x-icon" href="@Url.Content(MvcApplication.FavIcon)" />

</head>
<body ng-app="app">
    @{ Html.RenderPartial("_NavigationBar"); }

    <div class="container body-content">
        @RenderBody()
    </div>
    <div class="container footer-content">
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Redstone</p>
        </footer>
    </div>

    <script src="~/Content/js/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.1.min.js"></script>
    <script src="~/Scripts/Controllers/ServerTicker.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/spinner")

    @RenderSection("scripts", false);
    <script src="/signalr/Hubs"></script>
</body>
</html>