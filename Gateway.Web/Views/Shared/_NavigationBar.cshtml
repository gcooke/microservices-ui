@using Gateway.Web.Utils
<div class="navbar-inverse navbar-env navbar-fixed-top">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a href="@Url.Action("Index", "Home")" class="navbar-brand" style="padding: 0px 10px;">
            <img alt="Redstone" src="@Url.Content(MvcApplication.SiteLogo)" style="height: 46px">
        </a>
    </div>
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Controllers", "Dashboard", "Controllers")</li>
                <li>@Html.ActionLink("Security", "Index", "Security")</li>
                <li>@Html.ActionLink("How To", "HowTo", "Home")</li>
            </ul>

            <div class="pull-right">
                <small style="font-size: 75%;">@DateTime.Now&nbsp;</small>
                <small style="font-size: 75%;">(ver @VersionUtils.CurrentVersion)&nbsp;</small>
                <br />
                <small>
                    @{
                        var identity = User.Identity;
                        if (identity != null && identity.IsAuthenticated)
                        {
                            string loggedinuser = identity.Name;
                            <b>@loggedinuser</b>
                            @Html.ActionLink(" ", "LogOff", "Home", null, new { @class = "text-center glyphicon glyphicon-log-out" })
                        }
                        else
                        {
                            <b>Unknown User</b>
                        }
                    }
                </small>
            </div>
        </div>
    </div>
</div>