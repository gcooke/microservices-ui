@model Gateway.Web.Models.Controller.ConfigurationModel
<div class="form-group">
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row col-md-12">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.ControllerId)
        </div>
        <div class="row" hidden="@Model.IsUpdate">
            <div class="col-md-3" style="margin-top: 10px">
                @Html.LabelFor(m => m.Name, new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                <div class="input-group spinner">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Name, new { @name = "Name", @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row" hidden="@Model.IsUpdate">
            <div class="col-md-3" style="margin-top: 10px">
                @Html.LabelFor(m => m.Configuration, new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                <div class="input-group spinner">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.Configuration, new { @name = "Configuration", @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3" style="margin-top: 10px">
                @Html.LabelFor(m => m.TimeToLiveSec, new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                <div class="input-group spinner">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-spinner btn-number" data-type="minus" data-field="TimeToLiveSec">
                                <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </span>
                        @Html.TextBoxFor(m => m.TimeToLiveSec, new { @name = "TimeToLiveSec", @class = "number-spinner input-number", @min = "1", @max = "100000" })
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-spinner btn-number" data-type="plus" data-field="TimeToLiveSec">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3" style="margin-top: 10px">
                @Html.LabelFor(m => m.TimeoutMilliSec, new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                <div class="input-group spinner">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-spinner btn-number" data-type="minus" data-field="TimeoutMilliSec">
                                <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </span>
                        @Html.TextBoxFor(m => m.TimeoutMilliSec, new { @name = "TimeoutMilliSec", @class = "number-spinner input-number", @min = "1", @max = int.MaxValue })
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-spinner btn-number" data-type="plus" data-field="TimeoutMilliSec">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3" style="margin-top: 10px">
                @Html.LabelFor(m => m.ScalingStrategyId, new { @class = "control-label" })
            </div>
            <div class="col-md-4">
                @Html.EnumDropDownListFor(model => model.ScalingStrategyId, new { @class = "form-control", id = "scaling" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-4">
                <div id="AutomaticLabel" style="font-style: italic;"><small>As demand increases workers are started up across servers until maximum is reached</small></div>
                <div id="FixedLabel" style="font-style: italic"><small>Workers are always kept running on assigned servers as per count below</small></div>
                <div id="CloudLabel" style="font-style: italic"><small>Workers are started and managed externally</small></div>
            </div>
        </div>
        <div class="row" id="MaxPrioritiesGroup">
            <div class="col-md-3" style="margin-top: 10px">
                @Html.LabelFor(m => m.MaxPriority, new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-spinner btn-number" data-type="minus" data-field="MaxPriority">
                            <span class="glyphicon glyphicon-minus"></span>
                        </button>
                    </span>
                    @Html.TextBoxFor(m => m.MaxPriority, new { @name = "Max Priority", @class = "number-spinner input-number", @min = "1", @max = "10000" })
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-spinner btn-number" data-type="plus" data-field="MaxPriority">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="row" id="MaxInstancesGroup">
            <div class="col-md-3" style="margin-top: 10px">
                @Html.LabelFor(m => m.MaxInstances, new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-spinner btn-number" data-type="minus" data-field="MaxInstances">
                            <span class="glyphicon glyphicon-minus"></span>
                        </button>
                    </span>
                    @Html.TextBoxFor(m => m.MaxInstances, new { @name = "MaxInstances", @class = "number-spinner input-number", @min = "1", @max = "10000" })
                    <span class="input-group-btn">
                        <button type="button" class="btn btn-spinner btn-number" data-type="plus" data-field="MaxInstances">
                            <span class="glyphicon glyphicon-plus"></span>
                        </button>
                    </span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3" style="margin-top: 10px">
                @Html.LabelFor(m => m.Description, new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    @Html.TextAreaFor(m => m.Description, new { @name = "Description" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3" style="margin-top: 10px">
                @Html.LabelFor(m => m.CachingEnabled, new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    @Html.CheckBoxFor(m => m.CachingEnabled, new { @name = "CachingEnabled" })
                </div>
            </div>
        </div>

        <div class="row" id="NestedPriorityGroup">
            <div class="col-md-3" style="margin-top: 10px">
                @Html.LabelFor(m => m.NestedPriority, new { @class = "control-label" })
            </div>
            <div class="col-md-3">
                <div class="input-group">
                    @Html.CheckBoxFor(m => m.NestedPriority, new { @name = "NestedPriority" })
                </div>
            </div>
        </div>

        <div id="PodConfigurationGroup">
            <div class="row" id="DefaultReplicaCountGroup">
                <div class="col-md-3" style="margin-top: 10px">
                    @Html.LabelFor(m => m.DefaultReplicaCount, new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-spinner btn-number" data-type="minus" data-field="DefaultReplicaCount">
                                <span class="glyphicon glyphicon-minus"></span>
                            </button>
                        </span>
                        @Html.TextBoxFor(m => m.DefaultReplicaCount, new { @name = "Replicas", @class = "number-spinner input-number", @min = "0", @max = "2000", Value = "0" })
                        <span class="input-group-btn">
                            <button type="button" class="btn btn-spinner btn-number" data-type="plus" data-field="DefaultReplicaCount">
                                <span class="glyphicon glyphicon-plus"></span>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-4">
                    <div id="DefaultReplicaCountLabel" style="font-style: italic;"><small>The desired number of pods for this workload.</small></div>
                </div>
            </div>

            <div class="row" id="CpuRequestGroup">
                <div class="col-md-3" style="margin-top: 10px">
                    @Html.LabelFor(m => m.CpuRequest, new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.CpuRequest, new { @name = "CPU Request", style = "width:80px;" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-4">
                    <div id="CpuRequestLabel" style="font-style: italic;"><small>The minimum CPU requirement when Kubernetes schedules a pod. Can be expressed as '0.1' or '100m'.</small></div>
                </div>
            </div>

            <div class="row" id="CpuLimitGroup">
                <div class="col-md-3" style="margin-top: 10px">
                    @Html.LabelFor(m => m.CpuLimit, new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.CpuLimit, new { @name = "CPU Limit", style = "width:80px;" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-4">
                    <div id="CpuLimitLabel" style="font-style: italic;"><small>The maximum amount of CPU time that a container can use. Can be expressed as '0.1', '100m' or '1'.</small></div>
                </div>
            </div>

            <div class="row" id="MemoryRequestGroup">
                <div class="col-md-3" style="margin-top: 10px">
                    @Html.LabelFor(m => m.MemoryRequest, new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.MemoryRequest, new { @name = "Memory Request", style = "width:80px;" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-4">
                    <div id="MemoryRequestLabel" style="font-style: italic;"><small>The minimum memory requirement when Kubernetes schedules a pod. Can be expressed as 'Mi', e.g.: '50Mi'.</small></div>
                </div>
            </div>

            <div class="row" id="MemoryLimitGroup">
                <div class="col-md-3" style="margin-top: 10px">
                    @Html.LabelFor(m => m.MemoryLimit, new { @class = "control-label" })
                </div>
                <div class="col-md-3">
                    <div class="input-group">
                        @Html.TextBoxFor(m => m.MemoryLimit, new { @name = "Memory Limit", style = "width:80px;" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-4">
                    <div id="MemoryLimitLabel" style="font-style: italic;"><small>The maximum amount of memory that a container can use. Can be expressed as 'Mi' or 'Gi' e.g.: '100Mi' or '1Gi'.</small></div>
                </div>
            </div>
        </div>

        <br />

        <div class="row" id="PriorityLimitsLabel">
            <div class="col-md-6">
                @Html.LabelFor(m => m.PriorityLimits, new { @class = "control-label" })
            </div>
        </div>

        <div class="form-group" id="PriorityLimitsGrid">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6 ">
                        <table class="datatable table report-table select-all-table" id="ControllerRestriction-table">
                            <thead>
                                <tr style="background: #990505;">
                                    <th style="background: #990505;">
                                        @Html.CheckBox("select-all")
                                    </th>
                                    <th style="background: #990505;">Priority</th>
                                    <th style="background: #990505;">
                                        <div id="PriorityLimitsTableHeaderLabel">Running workers per server</div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @for (var i = 0; i < Model.PriorityLimits.Count(); i++)
                                {
                                    <tr>
                                        <td style="text-align: center; vertical-align: middle">
                                            @Html.CheckBoxFor(x => Model.PriorityLimits[i].Enabled)
                                            @Html.HiddenFor(x => Model.PriorityLimits[i].Id)
                                        </td>
                                        <td style="text-align: center; vertical-align: middle">
                                            <strong style="font-size: 1.5em;">
                                                @Html.HiddenFor(x => Model.PriorityLimits[i].Priority)
                                                @Model.PriorityLimits[i].Priority
                                            </strong>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(e => Model.PriorityLimits[i].Instances)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-offset-3 col-md-4">
            <img src="../../Content/img/ajax-loader.gif" id="loading" />
            <button class="btn btn-default btn-sm" type="submit" i="submit">
                Save
            </button>
        </div>
    </div>
</div>