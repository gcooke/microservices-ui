@using Gateway.Web.Database
@using Gateway.Web.Models
@using Gateway.Web.Models.AddIn
@using Gateway.Web.Models.Controller
@using Gateway.Web.Models.Group
@using Gateway.Web.Models.Permission
@using Gateway.Web.Models.Security
@using Gateway.Web.Models.Shared
@using Gateway.Web.Utils
@using Newtonsoft.Json
@using Version = Gateway.Web.Models.Controller.Version
@model Gateway.Web.Models.Shared.AddInModel
@{
    Layout = "~/Views/Shared/_Layout.NoFooter.cshtml";
    ViewBag.Title = "Add-In";
    ViewBag.Current = "Details";
}
@{ Html.RenderPartial("_AddInNav", (AddInModel)@Model); }

<div id="page-content-wrapper">
    <div class="hero-unit">

        <h3>Add-In</h3>

        <br/>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div id="containerx bulk">

            <table style="width: 50%; white-space: nowrap" class="datatable">
                <tr>
                    <td class="columnheader" style="width: 20%">Id</td>
                    <td style="width: 80%">@Model.Id</td>
                </tr>
                <tr>
                    <td class="columnheader">Name</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td class="columnheader">Friendly Name</td>
                    <td>@Model.FriendlyName</td>
                </tr>
                <tr>
                    <td class="columnheader">Description</td>
                    <td>@Model.Description</td>
                </tr>
            </table>
        </div>

        <br />
        @Html.ActionLink("Delete", "RemoveAddIn", "AddIn", new { id = Model.Id }, new { @class = "btn btn-primary" })


    </div>
</div>
